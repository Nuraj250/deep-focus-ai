{
    "manifest_version": 3,
    "name": "Deep Focus â€“ AI-Powered Website Blocker",
    "version": "1.0",
    "description": "A smart browser extension that blocks distracting websites based on your focus patterns.",
    "icons": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    },
    "permissions": [
      "tabs",
      "storage",
      "activeTab",
      "alarms",
      "notifications"
    ],
    "background": {
      "service_worker": "src/service-worker.js"
    },
    "action": {
      "default_popup": "src/popup/popup.html",
      "default_icon": {
        "16": "assets/icon-16.png",
        "48": "assets/icon-48.png",
        "128": "assets/icon-128.png"
      }
    },
    "options_page": "src/options/options.html",
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["src/content.js"],
        "css": ["src/popup/popup.css"]
      }
    ]
  }
  